<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 상단바 -->
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/total_background"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="1dp" >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/main_color"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:elevation="1dp" >

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temp_title_text"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title" />

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:text="@string/contact_text1"
                    android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderbox"
                    android:paddingLeft="10dp"
                    android:maxLength="8"
                    android:hint="이름" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_marginTop="10dp"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderbox"
                    android:paddingLeft="10dp"
                    android:maxLength="25"
                    android:hint="이메일" />

                <EditText
                    android:id="@+id/edt_title"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderbox"
                    android:paddingLeft="10dp"
                    android:maxLength="20"
                    android:hint="제목"/>

                <EditText
                    android:id="@+id/edt_content"
                    android:gravity="clip_horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/borderbox"
                    android:padding="10dp"
                    android:maxLength="500"
                    android:maxLines="10"
                    android:hint="여기에 내용을 입력해주세요 :)"/>

                <TextView
                    android:id="@+id/cntTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="20dp"
                    android:text="0자 /최대 500자"/>

                <Button
                    android:id="@+id/btnSend"
                    android:background="@drawable/round"
                    android:backgroundTint="@color/main_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="보내기"/>









            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>