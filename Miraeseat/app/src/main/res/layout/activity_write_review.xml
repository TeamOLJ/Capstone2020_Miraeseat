<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <Button style="@style/homebt"
            android:id="@+id/btnCancel"
            android:text="취소"
            android:background="#00ff0000"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center"
            android:text="리뷰 작성" />

        <Button style="@style/homebt"
            android:id="@+id/btnSave"
            android:text="저장"
            android:background="#00ff0000"
            android:layout_gravity="right" />

    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/write_photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/write_photo"
        android:layout_alignTop="@id/write_photo"
        android:layout_alignRight="@id/write_photo"
        android:layout_alignBottom="@id/write_photo"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="이미지 추가"/>

</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="평점  "
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/write_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:numStars="5" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="후기  "
        android:layout_gravity="center_vertical"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/write_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="최소 00자로 입력해주세요"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:maxLines="8"
        />


</LinearLayout>